<%- include('./partials/header') %>

<div class="w-full flex flex-wrap gap-10 px-20 py-20">
  <% user.cart.forEach(function(item){ %>
    <div class="w-full sm:w-1/2 lg:w-1/3 xl:w-1/4 mb-10">
        <div class="w-full rounded-md overflow-hidden">
            <div class="w-full h-80 bg-yellow-500">
                <img class="h-[12rem] object-cover" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="<%= item.name %>">
            </div>
            <div class="w-full flex justify-between px-5 py-4">
                <h3 class="text-2xl"><%= item.name %></h3>
                <div class="flex items-center gap-2">
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                    <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                </div>
            </div>
            <div class="flex items-center justify-between px-5 py-3">
                <h4 class="text-lg">Net Total</h4>
                <h2 class="text-lg">₹ <%= item.price %></h2>
            </div>
        </div>
        <div class="w-full mt-5 bg-white p-5 rounded-md shadow-md">
            <h3 class="text-xl">Price Breakdown</h3>
            <div class="mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>₹ <%= item.price %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>₹ <%= item.discount %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>₹ 0</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= item.discount + item.price %> </h3>
            </div>
        </div>
    </div>
  <% }) %>
</div>

<%- include('./partials/footer') %>
